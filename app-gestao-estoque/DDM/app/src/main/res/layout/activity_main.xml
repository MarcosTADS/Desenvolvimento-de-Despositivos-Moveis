<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/login_base_background_color">

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        android:layout_marginTop="100dp"
        />

    <LinearLayout
        android:id="@+id/containerForm"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@drawable/container_form_login">

        <LinearLayout
            android:id="@+id/containerLoginTextField"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UsuÃ¡rio:"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:hint="Digite seu e-mail"
                android:inputType="text"
                android:background="@drawable/login_text_field"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSenhaTextField"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha:"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editTextSenha"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:hint="Digite sua senha"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_text_field"/>

        </LinearLayout>


        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:layout_marginTop="25dp"

            android:background="@drawable/login_button_container"/>

        <LinearLayout
            android:id="@+id/containerCadastrarTextField"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esqueceu a senha?"
                android:textSize="15dp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se cadastrar"
                android:textSize="15dp"
                android:textColor="@color/white"
                />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


